{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "src/**/*.d.ts",
    "./src/**/*",
    "./src/**/*.vue",
    "/src/**/*.vue",
    "src/**/*.vue",
    "src/**/*.tsx",
    "./src/*.ext",
    "__tests__",
    "lib"
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "noEmit": true,
    "allowJs": true,
    "target": "ESNext",
    "isolatedModules": true,
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    // "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
